.tabBar {
    display: flex
    align-items: center
    font-size: 1.16rem
    gap: 10px

    .tab {
        height: 100%
        color: #71777C
        cursor: pointer
        padding: 0 1em
        display: flex
        align-items: center
        justify-content: center // 文字居中
        background: white
        border-radius: 30px

        &:hover {
            color: #007FFF
        }
    }

    .tab.choose {
        background: #007FFF
        color: #fff
    }
}
