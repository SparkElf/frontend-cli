@import '~/src/common/style/variable.styl'

.header-spark {
    width: 100%
    height: 5rem
    background-color: white
    position: sticky
    border-bottom: 1px solid #f1f1f1
    top: 0

    &.active {
        transform: translate3d(0, -100%, 0)
        transition: all 0.2s
    }

    .container {
        max-width: 1200px
        height: 100%
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: center

        .logo {
            width: 116.82px
            height: 24px
            margin-right: 5rem
        }

        .optionBar {
            font-size: 1.33rem
            gap: 2.5rem
            margin-right: 10rem
        }

        .searchBar {
            margin-right: 4rem
        }

        .btnGroup {
            display: flex
            gap: 1.7rem

            button {
                border: 1px solid #007fff
                background-color: #fff
                color: #007fff
                border-radius: 2px
                font-size: 1.33rem
                padding: 0.3rem 1.7rem
                cursor: pointer

                &:hover {
                    box-shadow: 0 0px 5px 0.01px rgba(0, 127, 255, 0.3)
                }
            }
        }
    }
}
