@import '~/src/common/style/variable.styl'

$headerBarTransY = 'calc(-%s - 1px)' % $headerHeight
$headerBarY = 'calc(%s + 1px)' % $headerHeight
$subHeaderBarY = 'calc(%s +1px)' % headerBarY

.page {
    width: 100%
    height: 100%

    .headerBar {
        position: sticky // 设置sticky后父元素不能有任何百分比或数值型的高度设置
        top: $headerBarY
        width: 100%
        background-color: white
        display: flex
        justify-content: center
        align-items: center
        border-bottom: 1px solid #f4f4f4

        &.active {
            transform: translate3d(0, $headerBarTransY, 0)
            transition: all 0.2s
        }

        .optionBar {
            transform: translate(-158px)
        }
    }

    .subHeaderBar {
        width: 100%
        display: flex
        justify-content: center
        align-items: center

        .row {
            width: 940px

            .tabBar {
                font-size: 1.1rem
                margin-top: 10px

                .tab {
                    height: 24px
                }
            }
        }
    }

    .pageContent {
        margin: auto
        margin-top: 12px
        display: flex
        justify-content: center
        gap: 20px
        background-color: #F4F5F5

        &::-webkit-scrollbar {
            display: none
        }

        .listHeader {
            border-bottom: 1px solid #f4f4f4
            padding-left: 5px
        }

        .listArea {
            width: 700px
            background-color: white

            .listBody {
                .listItem {
                    box-sizing: border-box

                    .postItem {
                        padding: 0 1.5rem
                        display: flex
                        align-items: center
                        gap: 20px
                        cursor: pointer
                        padding-bottom: 10px
                        box-sizing: border-box // 细节

                        &:hover {
                            background-color: #FAFAFA
                        }

                        .img {
                            width: 120px
                            height: 80px
                            display: block

                            img {
                                display: block
                                width: 120px
                                height: 80px
                            }
                        }

                        .tabBar {
                            display: flex
                            align-items: center
                            font-size: 13px
                            height: 3rem

                            .tab {
                                height: 1em
                                color: #86909C
                                cursor: pointer
                                padding: 0 0.6em
                                display: flex
                                align-items: center
                                justify-content: center // 文字居中
                                border-left: 1px solid hsla(0, 0%, 59.2%, 0.5)

                                &:first-child {
                                    border: none
                                    color: #4E5969
                                    padding-left: 0

                                    &:hover {
                                        color: #007FFF
                                    }
                                }
                            }
                        }

                        .title {
                            font-weight: 700
                            font-size: 16px
                            display: block
                            margin-bottom: 10px
                        }

                        .brief {
                            color: #86909C
                        }
                    }
                }

                .divider {
                    box-sizing: border-box
                    margin: 0 1.5rem
                    border-bottom: 1px solid #f1f1f1
                }
            }
        }

        .sideBar {
            width: 240px
            display: flex
            flex-direction: column
            gap: 20px

            img {
                cursor: pointer
            }

            .stickyBlock {
                width: 240px
                display: flex
                flex-direction: column
                gap: 20px

                @keyframes stickyBlockAnime {
                    from {
                        opacity: 0
                    }

                    to {
                        opacity: 1
                    }
                }

                &.active {
                    position: sticky
                    top: 120px
                    animation: stickyBlockAnime 0.5s
                }
            }

            .sign {
                background-color: white
                padding: 16px

                .row {
                    display: flex
                    justify-content: space-between

                    .gretting {
                        font-weight: 500
                        font-size: 18px
                        color: #1d2129
                    }

                    button {
                        color: #1e80ff
                        font-size: 14px
                        font-weight: 400
                        border: 1px solid #1e80ff
                        background-color: #fff
                        border-radius: 50px
                        height: 28px
                        width: 72px
                        margin-top: 0px
                    }
                }

                .slogan {
                    color: #4e5969
                    font-size: 14px
                    font-weight: 400
                    display: flex
                    align-items: center
                    justify-content: center
                    margin-top: 15px
                }
            }

            .rankingList {
                background-color: white

                .rankingHeader {
                    padding: 1rem 1.3rem
                    border-bottom: 1px solid hsla(0, 0%, 59.2%, 0.1)
                    color: #333
                    font-size: 1.16rem
                }

                .userList {
                    border-bottom: 1px solid hsla(0, 0%, 59.2%, 0.1)

                    .userListItem {
                        display: flex
                        padding: 1rem 1.3rem
                        cursor: pointer

                        .avatar {
                            width: 40px
                            height: 40px
                            border-radius: 50%
                            margin-right: 10px
                        }

                        .title {
                            display: flex
                            align-items: center

                            .userName {
                                font-size: 1.16rem
                                margin-right: 5px
                            }
                        }

                        .desc {
                            color: #909090
                        }
                    }
                }

                .rankingFooter {
                    cursor: pointer
                    color: #007fff
                    padding: 1rem 0
                    text-align: center
                    font-size: 1.16rem
                }
            }
        }
    }
}
